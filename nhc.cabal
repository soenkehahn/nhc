category:            Development
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable nhc
  main-is: Main.hs
  hs-source-dirs:
    src
  ghc-options:
    -Wall -Werror -fno-warn-name-shadowing -threaded
  build-depends:
    base,
    interpolate,
    unix,
    filepath,
    directory,
    process,
    setenv,
    options
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
 default-language: Haskell2010
 hs-source-dirs: src, test
 main-is: Spec.hs
 ghc-options:
   -Wall -Werror -fno-warn-name-shadowing -threaded
 build-depends:
    base,
    interpolate,
    unix,
    filepath,
    directory,
    process,
    silently,
    setenv,
    options,

    hspec,
    temporary,
    QuickCheck,
    threads,
    safe
